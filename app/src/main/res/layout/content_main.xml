<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_title"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="5dp"
        android:textSize="22sp"
        android:textStyle="bold"
        />
    <Button
        style="@style/LaunchButton"
        android:layout_height="wrap_content"
        android:text="@string/media_streamer"
        android:onClick="onClickStreamer"/>
    <Button
        android:layout_height="wrap_content"
        style="@style/LaunchButton"
        android:text="@string/super_duo1"
        android:onClick="onClickScores"/>
    <Button
        style="@style/LaunchButton"
        android:layout_height="wrap_content"
        android:text="@string/super_duo2"
        android:onClick="onClickLibrary"/>
    <Button
        style="@style/LaunchButton"
        android:layout_height="wrap_content"
        android:text="@string/ant_terminator"
        android:onClick="onClickAnt"/>
    <Button
        style="@style/LaunchButton"
        android:layout_height="wrap_content"
        android:text="@string/materialize"
        android:onClick="onClickBacon"/>
    <Button
        style="@style/LaunchButton"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content"
        android:text="@string/capstone"
        android:onClick="onClickCapstone"/>

</LinearLayout>
